---
import Layout from "./Layout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main class="content">
    <h1>{title}</h1>
    <section>
      <slot />
    </section>
  </main>
</Layout>

<style>
  main {
    margin: 1em auto;
    padding: 1em;
    max-width: var(--layout-width);
    line-height: 1.4em;
  }

  h1 {
    text-align: center;
    font-size: 3em;
  }
</style>
